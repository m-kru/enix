[
	{
		"Name": "Default",
		"Heading": {
			"Regex": "^(\\w|-)*:"
		},
		"Keyword": {
			"Regex": "^\\s*(?:define|endef|ifeq|ifneq|ifdef|ifndef|else|endif|export|unexport)"
		},
		"Variable": {
			"Regex": "\\$\\(@?\\w+\\)"
		}
	},
	{
		"Name": "Line Comment",
		"Style": "Comment",
		"Start": {
			"Regex": "#"
		},
		"End": {
			"Regex": "$"
		}
	},
	{
		"Name": "String",
		"Style": "String",
		"Start": {
			"Regex": "\""
		},
		"End": {
			"Regex": "\"",
			"NegativeLookBehind": "(?:[^\\\\])\\\\"
		},
		"Variable": {
			"Regex": "\\$\\(\\w+\\)"
		}
	}
]