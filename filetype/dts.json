			"Regex": "[a-zA-Z]\\w+:"
		},
		"Keyword": {
			"Regex": "/(dts-v1|plugin)/"
		},
		"Meta": {
			"Regex": "#(include|define|undef)"
		},
		"Type": {
			"Regex": "&[a-zA-Z]\\w+"
		}
	},
	{
		"Name": "Block Comment",
		"Style": "Comment",
